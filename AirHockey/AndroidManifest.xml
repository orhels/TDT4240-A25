<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.airhockey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/airhockey_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.airhockey.TitleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.airhockey.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.HistoryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.NewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.SettingsScene"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.TitleScene"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.airhockey.GameActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>